# Account
GET     /api/account/information       persona.controllers.Accounts.listInformation
POST    /api/account/information       persona.controllers.Accounts.saveInformation

# Authentication
GET     /api/authenticate              persona.controllers.Authentication.authenticate

# Offers
GET     /api/offer                     persona.controllers.Offers.list
GET     /api/offer/:id                 persona.controllers.Offers.get(id: java.util.UUID)
POST    /api/offer/:id/participate     persona.controllers.Offers.participate(id: java.util.UUID)
