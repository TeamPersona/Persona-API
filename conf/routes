# Account
GET     /api/account/information       persona.controllers.Accounts.listInformation
POST    /api/account/information       persona.controllers.Accounts.saveInformation

# Authentication
GET     /api/authorize                 persona.controllers.Authentication.authorize

# Offers
GET     /api/offer                     persona.controllers.Offers.list
GET     /api/offer/:id                 persona.controllers.Offers.get(id: Long)
POST    /api/offer/:id/participate     persona.controllers.Offers.participate(id: Long)

